{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "extends": ["ultracite"],
  "files": {
    "includes": [
      "**/*.ts",
      "**/*.tsx",
      "**/*.js",
      "**/*.jsx",
      "**/*.json",
      "!**/*.md",
      ".*.yml",
      "!.changeset.*"
    ]
  },
  "linter": {
    "rules": {
      "style": {
        "noMagicNumbers": "off",
        "useNumericSeparators": "off"
      }
    }
  }
}
