{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,

    "outDir": "dist",
    "rootDir": "src",

    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "Bundler",

    "skipLibCheck": true,
    "stripInternal": true,
    "newLine": "lf",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "noEmitOnError": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["tests", "demo", "**/*.test.ts"]
}
